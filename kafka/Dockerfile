FROM confluentinc/cp-kafka:6.1.0

ENV KAFKA_BROKER_ID=1
ENV KAFKA_OFFSETS_TOPIC_REPLICATION_FACTOR=1
ENV KAFKA_ZOOKEEPER_CONNECT=zoo:2181
ENV KAFKA_INTER_BROKER_LISTENER_NAME=INTERNAL
ENV KAFKA_LISTENERS=INTERNAL://kafka:29092,PLAINTEXT://:9092
ENV KAFKA_ADVERTISED_LISTENERS=INTERNAL://kafka:29092,PLAINTEXT://host.docker.internal:9092
ENV KAFKA_LISTENER_SECURITY_PROTOCOL_MAP=INTERNAL:PLAINTEXT,PLAINTEXT:PLAINTEXT

EXPOSE 9092 29092

CMD ["/etc/confluent/docker/run"]
